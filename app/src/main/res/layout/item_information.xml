<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/txtHazardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hazard Type: "
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/txtTimeDateReported"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time/Date Reported: "
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/txtReporterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reporter Name: "
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/txtHazardLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hazard Location: "
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/txtHazardDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hazard Description: "
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>